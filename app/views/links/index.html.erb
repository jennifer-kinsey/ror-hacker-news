<div id="links_index">
  <%= link_to(image_tag("add.png", alt: "Add"), new_link_path) %>

  <%= link_to(image_tag("unpopular.png", alt: "unpopular"),links_path(sort_by: "sort_by_least_popular"))%>

  <%= link_to(image_tag("popular.png", alt: "popular"),links_path(sort_by: "sort_by_most_popular"))%>
  <%= link_to(image_tag("new.png", alt: "newest"),links_path(sort_by: "sort_by_newest"))%>
  <%= link_to(image_tag("old.png", alt: "oldest"),links_path(sort_by: "sort_by_oldest"))%>
  <%= link_to(image_tag("up.png", alt: "most comments"),links_path(sort_by: "descending_by_rank"))%>
  <%= link_to(image_tag("down.png", alt: "least comments"),links_path(sort_by: "ascending_by_rank"))%>
  <% @links.each do |link| %>
    <div class="link">
      <h3><%= link_to(link.description, link.link_url) %><%= link_to(image_tag("pencil.png", alt: "Edit"), link_path(link)) %></h3>

      <%= link_to(
      image_tag("up.png", alt: "up vote", class: "thumbsize"),
       up_vote_path(link), data: {method: "post"}) %> |

      <%= link_to(image_tag("down.png", alt: "down vote", class: "thumbsize"), down_vote_path(link), data: {method: "post"}) %>


      <p><%= "#{link.rank} #{"point".pluralize(link.rank)} by #{link.user}"%> | <%= link_to "#{link.comments.length} #{"comment".pluralize(link.comments.length)}", link_comments_path(link) %> </p>
    </div>
  <% end %>
</div>
